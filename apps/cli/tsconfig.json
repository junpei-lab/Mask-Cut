{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
