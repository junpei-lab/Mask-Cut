    "typeRoots": ["./src/types", "../../node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@mask-cut/text-llm-core": ["../../packages/text-llm-core/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
